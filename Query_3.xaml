<Window x:Class="LabWork_8_1.Query_3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork_8_1"
        mc:Ignorable="d"
        Title="Query_3" Height="450" Width="800">
    <Grid>
        <ScrollViewer>
            <DataGrid AutoGenerateColumns="False" IsReadOnly="True" Name="dataGrid">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Код поставщика" Width="*" Binding="{Binding КодПоставщика}"/>
                    <DataGridTextColumn Header="Номер договора" Width="*" Binding="{Binding НомерДоговора}"/>
                    <DataGridTextColumn Header="Товар" Width="2*" Binding="{Binding Товар}"/>
                    <DataGridTextColumn Header="Количество" Width="2*" Binding="{Binding Количество}"/>
                    <DataGridTextColumn Header="Цена" Width="2*" Binding="{Binding Цена}"/>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
    </Grid>
</Window>
